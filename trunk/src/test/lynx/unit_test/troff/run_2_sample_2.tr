.\"-----------------------------------------------------------------------------
.\" run_2_sample_2.tr
.\"-----------------------------------------------------------------------------
.\" Sample troff file.
.\"-----------------------------------------------------------------------------

.\"*****************************************************************************
.\" Macro package: 
.\" Preprocessors: 
.\"*****************************************************************************

.de hd                          \" define header
.if \\n%>1 \{\
'sp 0.5i-1                                      \" tl base at 0.5i
.tl ''- % -''                                   \" centered page number
.ps                                     \" restore size
.ft                                     \" restore font
.vs \}                                  \" restore vs
'sp 1.0i                                        \" space to 1.0i
.ns                                     \" turn on no-space mode
..                              \" end define

.de fo                          \" define footer
.ps 10                                  \" set footer/header size
.ft R                                   \" set font
.vs 12p                                 \" set baseline spacing
.if \\n%=1 \{\
'sp \\n(.pu-0.5i-1                              \" tl base 0.5i up
.tl ''- % - '' \}                               \" first page number
'bp
..                              \" end define

.wh 0 hd
.wh -1i fo

.\"-----------------------------------------------------------------------------
.\"<EOF>
